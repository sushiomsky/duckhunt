{
    "manifest_version": 3,
    "name": "DuckDice Auto Hunter",
    "version": "1.0",
    "description": "Automatically catches ducks on duckdice.io with real-time WebSocket monitoring.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_title": "Duck Hunter"
    },
    "content_scripts": [
        {
            "matches": ["*://duckdice.io/*"],
            "js": ["content_script.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["*://duckdice.io/"]
}