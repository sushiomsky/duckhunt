{
  "manifest_version": 3,
  "name": "DuckDice Auto DuckHunt",
  "version": "1.0.0",
  "description": "Automatically detect ducks in chat and replay the original shoot WebSocket packet.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://duckdice.io/*",
    "wss://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "DuckHunt Auto-Shooter"
  },
  "content_scripts": [
    {
      "matches": ["https://duckdice.io/*"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ]
}
