{
    "manifest_version": 3,
    "name": "DuckDice Auto Hunter",
    "version": "1.0",
    "description": "Automatisiert das Abschie√üen von Enten auf duckdice.io.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://duckdice.io/*"],
            "js": ["content_script.js"],
            "run_at": "document_start" 
        }
    ],
    "permissions": ["activeTab"],
    "host_permissions": ["*://duckdice.io/"]
}